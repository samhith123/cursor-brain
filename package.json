{
  "name": "@samhithgardas/cursor-brain",
  "version": "0.1.3",
  "description": "Persistent memory layer for Cursor IDE: MCP server for semantic + lexical memory search and storage",
  "author": "Samhith Gardas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samhith123/cursor-brain.git"
  },
  "bugs": {
    "url": "https://github.com/samhith123/cursor-brain/issues"
  },
  "homepage": "https://github.com/samhith123/cursor-brain#readme",
  "engines": {
    "node": ">=18"
  },
  "bin": {
    "cursor-brain": "./dist/mcp/server.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p . && node -e \"const fs=require('fs');const f='dist/mcp/server.js';fs.writeFileSync(f,'#!/usr/bin/env node\\n'+fs.readFileSync(f))\"",
    "watch": "tsc -p . -w",
    "mcp:run": "node dist/mcp/server.js",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "openai": "^4.0.0",
    "sqlite-vec": "^0.1.6",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
